<resources>

    <style name="titleInfoObject" parent="BaseFatFont">
        <item name="android:textSize">@dimen/title_info_object</item>
        <item name="android:textColor">@color/darkTextColor</item>
    </style>

    <style name="Button" parent="BaseFatFont">
        <item name="android:background">@drawable/background_button</item>
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="android:textColor">@color/lightTextColor</item>
    </style>

    <style name="WidgetsVector" parent="BaseFatFont">
        <item name="android:scaleX">2.0</item>
        <item name="android:scaleY">2.0</item>
        <item name="android:tint">@color/accentColor</item>
    </style>

    <style name="SpecialButton">
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/base_space_2x</item>
        <item name="android:layout_marginRight">@dimen/base_space_2x</item>
    </style>

    <style name="CircleFillButton" parent="SpecialButton">
        <item name="android:textColor">@color/lightTextColor</item>
        <item name="android:background">@drawable/fill_circle_button</item>
    </style>

    <style name="DecoratorItem" parent="BaseFatFont">
        <item name="android:tint">@color/lightTextColor</item>
        <item name="android:background">@drawable/background_decorator_item</item>
        <item name="android:scaleX">1.5</item>
        <item name="android:scaleY">1.5</item>
        <item name="android:padding">@dimen/base_space</item>
    </style>


</resources>
