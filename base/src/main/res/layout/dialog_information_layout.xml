<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="@dimen/base_space_2x">

    <TextView
        android:id="@+id/title_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/base_space_2x" />

    <TextView
        android:id="@+id/message_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/title_dialog"
        android:layout_marginLeft="@dimen/base_space_2x"
        android:layout_marginRight="@dimen/base_space_2x" />

    <TextView
        android:id="@+id/button_negotive_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/message_dialog"
        android:layout_marginLeft="@dimen/base_space_2x"
        android:layout_marginTop="@dimen/base_space_2x"
        android:layout_marginRight="@dimen/base_space_2x"
        android:layout_toLeftOf="@+id/button_positive_dialog"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/button_positive_dialog"
        android:layout_width="wrap_content"
        android:visibility="invisible"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/message_dialog"
        android:layout_marginLeft="@dimen/base_space_2x"
        android:layout_marginTop="@dimen/base_space_2x" />

</RelativeLayout>