<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/title_dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_semi_bold"
        android:layout_margin="@dimen/base_space_2x"
        android:textSize="@dimen/title_dialog_size"
        android:ellipsize="end"
        android:maxLines="1" />

    <TextView
        android:id="@+id/message_dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title_dialog"
        android:fontFamily="@font/montserrat_medium"
        android:textSize="@dimen/message_dialog_size"
        android:layout_marginLeft="@dimen/base_space_2x"
        android:layout_marginRight="@dimen/base_space_2x"
        android:ellipsize="end"
        android:maxLines="4" />

    <TextView
        android:id="@+id/button_negative_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/message_dialog"
        android:padding="@dimen/base_space"
        android:fontFamily="@font/montserrat_semi_bold"
        android:layout_marginTop="@dimen/base_space"
        android:layout_marginBottom="@dimen/base_space"
        android:layout_marginEnd="@dimen/base_space"
        android:layout_toStartOf="@+id/button_positive_dialog"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/button_positive_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/message_dialog"
        android:layout_alignParentEnd="true"
        android:fontFamily="@font/montserrat_semi_bold"
        android:layout_marginTop="@dimen/base_space"
        android:layout_marginEnd="@dimen/base_space"
        android:layout_marginBottom="@dimen/base_space"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:padding="@dimen/base_space"
        android:visibility="invisible" />

</RelativeLayout>